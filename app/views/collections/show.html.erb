 <style>
   .well-small {
     margin-top: -55px;
     #margin-left: -5%;
     width: 100%;
     height: auto;
     position: fixed;
     text-align: center;
   }
   
   .collection-details {
     #position: relative;
     padding-top: 75px;
   }
   
   .btn-success {
     font-size: 0.8em;
   }
   
   .item-details {
     position: relative;
     display: inline;
     z-index: -1;
   }
 </style>
 <ul class="breadcrumb">
  <div class="sub-head">
    <h4 style="display: inline;">  </h4>&nbsp;&nbsp;&nbsp;
    <a role="button" data-toggle="modal" href="/collections"> Browse all collections</a> | 
    <a role="button" data-toggle="modal" href="#newCollectionForm"> <img style="margin-top: -1px;"src="http://cdn1.iconfinder.com/data/icons/duesseldorf/16/plus.png"> Create a collection </a>
    <% if @user %>
      <div class="user-box">
        <h5 style="display:inline;">Hi, <a href="#"><%= @user["name"] %> </a></h5>
        <a style="color: #da4834;"href="/auth/logout" >  Logout</a>
      </div>
    <% end %>
  </div>
  </ul>
    
    <div class="well well-small">
        <h2 style="color:#da4834; display: inline;"><%= @collection["collection_name"] %></h2>&nbsp;&nbsp;&nbsp; | by <a href="#"><span style="color:#ff4b33;"><%= @collection["created_by"]["name"]%></span></a>
       <h3><a href="#" class="btn btn-success">Buy this Collection </a>  @ <span class="price"><%= number_to_currency(@collection["items"].map{|item| item["itemPrice"] }.sum, unit: "&yen;&nbsp;", precision: 0) %></span>  <h3>
      </div>
  <div class="container collection-details">
    <% @collection["items"].each do |item|%>
      <img class="c-image" height=300 width=300 src="<%= item["mediumImageUrl"].gsub("128x128", "300x300") %>">
      <div class="item-details">
        <a target="_blank" href="http://www.rakuten.co.jp">From <img height=20 width=80 src="http://www.exapartners.com/wp-content/uploads/2013/06/rakuten-logo-global.jpg"></a>
        | <%= number_to_currency(item["itemPrice"], unit: "&yen;&nbsp;", precision: 0) %>
      </div>
    <% end %>
  </div>

<div id="newCollectionForm" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="well">
    <%= form_tag('/collections', :method => "post") do %>
      <fieldset>
        <legend> Add new collection </legend>
        <%= hidden_field_tag("user_id" , @user["uid"]) %>
        <label>Collection Name </label>
        <%= text_field_tag('cname', "", :autofocus => "true", :autocomplete => "off") %>
        <br>
        This collection is for <br><br>
        <input class="r-btn" type="radio" name="gender_flag" value="0"><span class="r-btn">Male </span></input>
        <input class="r-btn" type="radio" name="gender_flag" value="1"><span class="r-btn">Female </span></input>
        <input class="r-btn" type="radio" name="gender_flag" value="3"><span class="r-btn">Both </span></input><br><br>
        <legend></legend>
        <label>Add Items urls to collection </label>
        <%= text_area('itemurls', "", :class => 'txt-area', :autofocus => "true", :autocomplete => "off") %>
        <br>* separate urls with with newline
        <br>
        <br>
        &nbsp;<%= submit_tag '+ Add' , :class => "btn btn-success", :style => "margin-top: 10px;" %>
      </fieldset>
    <% end %>
  </div>
</div>
